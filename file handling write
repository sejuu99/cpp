#include<iostream>
#include<fstream>
using namespace std;

int main()
{
    ofstream fos("myfile.txt");
    
fos<<"this is my trial file"<<endl;
fos<<"created for file handling demo";
	
fos.close();
	
	return 0;
}



#include <iostream>
#include <fstream>
using namespace std;

int main()
{
	string str;
	ifstream fis("MyFile.txt");
	
	while(getline(fis,str))
	{
		cout << str << endl;
	}
	
	fis.close();	
	
	return 0;
}

